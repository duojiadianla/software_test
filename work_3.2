import pytest
import math

def test_sqrt_positive_number():
    ***测试正数的平方根计算***
    # 测试正常情况
    result = math.sqrt(16)
    assert result == 4.0

    # 测试小数
    result = math.sqrt(2.25)
    assert result == 1.5

def test_sqrt_zero():
    ***测试零的平方根***
    result = math.sqrt(0)
    assert result == 0.0

def test_sqrt_negative_number():
    ***测试负数的平方根（应该抛出ValueError异常）***
    # 测试异常情况
    with pytest.raises(ValueError):
        math.sqrt(-4)
